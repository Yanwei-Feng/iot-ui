{
  "compilerOptions": {
    "baseUrl": "./",
      "paths": {
        "iot-ui": ["components/index.ts"],
        "iot-ui/esm/*": ["components/*"],
        "iot-ui/lib/*": ["components/*"]
      },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "components",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/demo/**",
    "components/**/__tests__"
  ]
}